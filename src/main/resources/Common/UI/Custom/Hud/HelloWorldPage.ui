$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 400);

    #Title {
      $C.@Title {
        @Text = "Select one Button";
      }
    }

    #Content {
      Group {
        Padding: (Horizontal: 30, Vertical: 20);
        LayoutMode: Center;

        Group {
          LayoutMode: Center;
          Anchor: (Top: 10);

          $C.@TextButton #ButtonA {
            @Anchor = (Right: 8);
            Text: "Button A";
            FlexWeight: 1;
          }

          $C.@TextButton #ButtonB {
            @Anchor = (Left: 8);
            Text: "Button B";
            FlexWeight: 1;
          }
        }
      }
    }
  }
}

$C.@BackButton {}